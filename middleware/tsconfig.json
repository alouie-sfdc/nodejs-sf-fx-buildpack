{
    "compilerOptions": {
        "incremental": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es2017",
        "lib": [
            "es2017",
            "dom"
        ],
        "types": ["node"],
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "pretty": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "./*.ts"
    ]
}
